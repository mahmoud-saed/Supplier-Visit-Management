<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Extend Partner Form View -->
        <record id="view_partner_form_inherit_supplier_visit" model="ir.ui.view">
            <field name="name">res.partner.form.inherit.supplier.visit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_view_supplier_visits" 
                            type="object" 
                            class="oe_stat_button" 
                            icon="fa-calendar"
                            string="Visits">
                        <field name="supplier_visit_count" widget="statinfo" string="Visits"/>
                    </button>
                </xpath>
                
                <xpath expr="//notebook/page[@name='sales_purchases']" position="inside">
                    <group>
                        <field name="last_visit_date"/>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</odoo> 
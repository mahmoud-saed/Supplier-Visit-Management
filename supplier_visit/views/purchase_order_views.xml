<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Extend Purchase Order Form View -->
        <record id="view_purchase_order_form_inherit_supplier_visit" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit.supplier.visit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="partner_id" invisible="1"/>
                    <div class="o_supplier_visit_info">
                        <div class="alert alert-info" role="alert">
                            <i class="fa fa-info-circle"></i>
                            <strong>Supplier Visit Information:</strong>
                            <span class="supplier-visit-status">Checking visit history...</span>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo> 
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Supplier Visit Tree View -->
        <record id="view_supplier_visit_tree" model="ir.ui.view">
            <field name="name">supplier.visit.tree</field>
            <field name="model">supplier.visit</field>
            <field name="arch" type="xml">
                <tree string="Supplier Visits" decoration-info="state == 'draft'" decoration-success="state == 'done'" decoration-warning="state == 'confirmed'">
                    <field name="name"/>
                    <field name="supplier_id"/>
                    <field name="visit_date"/>
                    <field name="visitor_id"/>
                    <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'done'" decoration-warning="state == 'confirmed'"/>
                </tree>
            </field>
        </record>

        <!-- Supplier Visit Form View -->
        <record id="view_supplier_visit_form" model="ir.ui.view">
            <field name="name">supplier.visit.form</field>
            <field name="model">supplier.visit</field>
            <field name="arch" type="xml">
                <form string="Supplier Visit">
                    <header>
                        <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" states="draft"/>
                        <button name="action_done" string="Mark Done" type="object" class="oe_highlight" states="confirmed"/>
                        <button name="action_draft" string="Reset to Draft" type="object" states="confirmed,done"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,done"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="supplier_id"/>
                                <field name="visit_date"/>
                            </group>
                            <group>
                                <field name="visitor_id"/>
                                <field name="state"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Notes">
                                <field name="notes" placeholder="Enter visit notes here..."/>
                            </page>
                            <page string="Supplier Rating" name="supplier_rating">
                                <div class="o_supplier_rating_widget">
                                    <field name="supplier_id" invisible="1"/>
                                    <div class="rating-display">
                                        <span class="rating-label">Supplier Rating:</span>
                                        <div class="rating-stars" data-rating="3">
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star-o"></i>
                                            <i class="fa fa-star-o"></i>
                                        </div>
                                        <span class="rating-text">3 out of 5 stars</span>
                                    </div>
                                </div>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Supplier Visit Kanban View -->
        <record id="view_supplier_visit_kanban" model="ir.ui.view">
            <field name="name">supplier.visit.kanban</field>
            <field name="model">supplier.visit</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" class="o_kanban_small_column" sample="1">
                    <field name="name"/>
                    <field name="supplier_id"/>
                    <field name="visit_date"/>
                    <field name="visitor_id"/>
                    <field name="state"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="o_kanban_image">
                                    <img alt="Supplier" t-att-src="kanban_image('res.partner', 'image_128', record.supplier_id.raw_value)" class="o_kanban_image_fill_left"/>
                                </div>
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="name"/>
                                            </strong>
                                        </div>
                                        <div class="o_kanban_record_bottom">
                                            <div class="oe_kanban_bottom_left text-muted">
                                                <field name="supplier_id"/>
                                            </div>
                                            <div class="oe_kanban_bottom_right">
                                                <field name="visit_date"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <div class="o_kanban_primary_left">
                                            <field name="visitor_id"/>
                                        </div>
                                        <div class="o_kanban_primary_right">
                                            <field name="state" widget="label_selection" options="{'classes': {'draft': 'default', 'confirmed': 'warning', 'done': 'success'}}"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Supplier Visit Search View -->
        <record id="view_supplier_visit_search" model="ir.ui.view">
            <field name="name">supplier.visit.search</field>
            <field name="model">supplier.visit</field>
            <field name="arch" type="xml">
                <search string="Search Supplier Visits">
                    <field name="name"/>
                    <field name="supplier_id"/>
                    <field name="visitor_id"/>
                    <field name="visit_date"/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                    <filter string="Done" name="done" domain="[('state', '=', 'done')]"/>
                    <filter string="This Month" name="this_month" domain="[('visit_date', '&gt;=', (context_today() + relativedelta(day=1)).strftime('%Y-%m-%d')), ('visit_date', '&lt;=', (context_today() + relativedelta(months=1, day=1, days=-1)).strftime('%Y-%m-%d'))]"/>
                    <filter string="Last 30 Days" name="last_30_days" domain="[('visit_date', '&gt;=', (context_today() + relativedelta(days=-30)).strftime('%Y-%m-%d'))]"/>
                    <group expand="0" string="Group By">
                        <filter string="Supplier" name="group_supplier" context="{'group_by': 'supplier_id'}"/>
                        <filter string="Visitor" name="group_visitor" context="{'group_by': 'visitor_id'}"/>
                        <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Visit Date" name="group_visit_date" context="{'group_by': 'visit_date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Supplier Visit Action -->
        <record id="action_supplier_visit" model="ir.actions.act_window">
            <field name="name">Supplier Visits</field>
            <field name="res_model">supplier.visit</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="context">{'search_default_this_month': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first supplier visit!
                </p>
                <p>
                    Track and manage supplier visits with detailed notes and status tracking.
                </p>
            </field>
        </record>

        <!-- Menu Items -->
        <menuitem id="menu_supplier_visit_root" 
                  name="Supplier Visits" 
                  sequence="50"/>

        <menuitem id="menu_supplier_visit_main" 
                  name="Supplier Visits" 
                  parent="menu_supplier_visit_root" 
                  action="action_supplier_visit" 
                  sequence="10"/>

        <menuitem id="menu_supplier_visit_report" 
                  name="Reports" 
                  parent="menu_supplier_visit_root" 
                  sequence="20"/>

    </data>
</odoo> 
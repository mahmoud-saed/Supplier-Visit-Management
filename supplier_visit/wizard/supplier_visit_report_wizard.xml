<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Supplier Visit Report Wizard Form -->
        <record id="view_supplier_visit_report_wizard_form" model="ir.ui.view">
            <field name="name">supplier.visit.report.wizard.form</field>
            <field name="model">supplier.visit.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Supplier Visit Report">
                    <group>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                        <group>
                            <field name="supplier_id"/>
                        </group>
                    </group>
                    <footer>
                        <button name="action_generate_report" string="Generate Report" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Supplier Visit Report Wizard Action -->
        <record id="action_supplier_visit_report_wizard" model="ir.actions.act_window">
            <field name="name">Supplier Visit Report</field>
            <field name="res_model">supplier.visit.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <!-- Menu Item for Report Wizard -->
        <menuitem id="menu_supplier_visit_report_wizard" 
                  name="Visit Summary Report" 
                  parent="menu_supplier_visit_report" 
                  action="action_supplier_visit_report_wizard" 
                  sequence="10"/>

    </data>
</odoo> 
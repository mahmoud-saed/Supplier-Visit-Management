<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Mail Template for Visit Confirmation -->
        <record id="email_template_supplier_visit_confirmation" model="mail.template">
            <field name="name">Supplier Visit - Confirmation</field>
            <field name="model_id" ref="model_supplier_visit"/>
            <field name="subject">Supplier Visit Confirmed: {{ object.name }}</field>
            <field name="email_from">{{ user.email_formatted }}</field>
            <field name="partner_to">{{ object.supplier_id.id }}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p>Hello {{ object.supplier_id.name }},</p>
                    
                    <p>This is to confirm that a supplier visit has been scheduled and confirmed:</p>
                    
                    <ul>
                        <li><strong>Visit Reference:</strong> {{ object.name }}</li>
                        <li><strong>Visit Date:</strong> {{ object.visit_date }}</li>
                        <li><strong>Visitor:</strong> {{ object.visitor_id.name }}</li>
                        <li><strong>Status:</strong> {{ object.state }}</li>
                    </ul>
                    
                    <t t-if="object.notes">
                        <p><strong>Notes:</strong><br/>{{ object.notes }}</p>
                    </t>
                    
                    <p>We look forward to meeting with you.</p>
                    
                    <p>Best regards,<br/>
                    {{ user.name }}</p>
                </div>
            </field>
            <field name="auto_delete" eval="True"/>
        </record>

    </data>
</odoo> 